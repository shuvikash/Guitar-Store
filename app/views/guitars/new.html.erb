<div class="container">   
  <%= form_for @guitar, url: {action: :create} do |f| %>   
      <div>   
        <h3>Add a Guitar</h3>   
      </div>   
      <div>   
        <p>   
          <%= "<div>#{@guitar.errors.full_messages.first}</div>".html_safe if @guitar.errors.any? %>   
        <div>   
            <label>Guitar Name</label>   
              <%= f.text_field :g_type %>   
        </div>   
  
        <div>   
             <label>Model Name</label>   
             <%= f.text_field :brand_name %>   
        </div>   
  
        <div>   
           <label>No Of Strings</label>   
              <%= f.text_field :no_of_strings %>   
        </div>
        <div>   
             <label>Price</label>   
             <%= f.text_field :price %>   
        </div>
        <div>   
             <label>Bought Date</label>   
             <%= f.text_field :bought_date %>   
        </div>  
         </p>   
      </div>   
      <div>   
        <%= link_to 'Back', { controller: 'guitars', action: 'index'} %>   
        <%= f.submit 'Create Guitar' %>   
      </div>   
  <% end %>   
</div>
